{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"lib": ["dom", "es2019"],
		"module": "commonjs",
		"target": "es6",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
		"jsx": "react"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
